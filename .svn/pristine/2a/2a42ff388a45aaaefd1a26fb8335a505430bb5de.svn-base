@implementation MyFolderViewController

- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
        // Custom initialization
    }
    return self;
}

- (void)viewDidLoad
{
    [super viewDidLoad];
    self.view.backgroundColor = [UIColor colorWithPatternImage:[UIImage imageNamed:@"ios_background.png"]];
    self.navigationController.navigationBarHidden = NO;
    
    UIBarButtonItem *homeBtn  = [[UIBarButtonItem alloc] initWithTitle:@"Home" style:UIBarButtonItemStylePlain target:self action:@selector(goBackToHome)];
    self.navigationItem.leftBarButtonItem = homeBtn;
    [self showPopUpView];
}

-(void)viewWillAppear:(BOOL)animated
{
    //self.navigationController.navigationBarHidden = NO;
    self.tabBarController.tabBar.hidden = NO;
    
    self.navigationItem.title = @"MY FOLDER";
    self.tabBarItem.title = @"My Folder";
    
//    if ([ApplicationData sharedInstance].isDisply_PassCodeScreen == YES)
//    {
//         [ApplicationData sharedInstance].isDisply_PassCodeScreen = NO;
//         [self showPassCodeScreen];
//    }
    
    [self setUpViewForNormalUser];
    
}

-(void) showPopUpView
{
    //NSString *msgText = @"This is where you can store, view and respond to the\
    documnets we send you.";
    
    RKPOPViewController *rkMyFolderPop = [[RKPOPViewController alloc] initWithNibName:@"RKPOPViewController" bundle:nil];
    rkMyFolderPop.alertTitle = @"Welcome to My Folder";
    rkMyFolderPop.alertMessage = @"This is where you can store, view and respond to the\
    documnets we send you.";
    rkMyFolderPop.alertImage = [UIImage imageNamed:@"ios_folder_popup_icon.png"];
    
    rkMyFolderPop.modalTransitionStyle = UIModalTransitionStyleCrossDissolve;
    [self presentViewController:rkMyFolderPop animated:YES completion:nil];
}

-(void) btnOkTappedWithMessage:(NSString *)msg
{
    [self showPassCodeScreen];
}

-(void) showPassCodeScreen
{
    TempPassCodeVC *tempPassCodeVC = [self.storyboard instantiateViewControllerWithIdentifier:@"TempPassCodeVC"];
    [self presentViewController:tempPassCodeVC animated:YES completion:nil];
}

-(void) goBackToHome
{
    [self dismissViewControllerAnimated:YES completion:nil];
}

