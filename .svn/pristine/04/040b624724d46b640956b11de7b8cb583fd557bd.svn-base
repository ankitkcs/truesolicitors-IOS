#import "LinkClaimViewController.h"
#import "AllConstants.h"
#import "ApplicationData.h"
#import "RKPOPViewController.h"

@interface LinkClaimViewController ()

@end

@implementation LinkClaimViewController

- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
        // Custom initialization
    }
    return self;
}

- (void)viewDidLoad
{
    [super viewDidLoad];
    self.title = @"LINK YOUR CLAIM";
}

-(void) viewWillAppear:(BOOL)animated
{
    self.navigationController.navigationBarHidden = NO;
    
    UIBarButtonItem *linkBarButton = [[UIBarButtonItem alloc] initWithTitle:@"Link" style:UIBarButtonItemStyleBordered target:self action:@selector(linkBtnTapped)];
    self.navigationItem.rightBarButtonItem = linkBarButton;
}

-(void)linkBtnTapped
{
    
    RKPOPViewController *rkWelcomePop = [[RKPOPViewController alloc] initWithNibName:@"RKPOPViewController" bundle:nil];
    
    rkWelcomePop.alertTitle = @"Welcome, Mr Sommerville.";
    rkWelcomePop.alertMessage = @"You have successfully linked uoy Claim,number 346002 to this app.\
    \n\n You can now track the current staus of your TRUE Claim.";
    rkWelcomePop.alertImage = [UIImage imageNamed:@"ios_link_popup_icon.png"];
    
    rkWelcomePop.modalTransitionStyle = UIModalTransitionStyleCrossDissolve;
    [self presentViewController:rkWelcomePop animated:YES completion:nil];
}

- (void)didReceiveMemoryWarning
{
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

@end
